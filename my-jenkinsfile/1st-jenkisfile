pipeline {
    agent {
        docker {
            image 'jamesdbloom/docker-java8-maven:latest' 
            args '-v /root/.m2:/root/.m2 -p 8079:8079' 
        }
    }
    stages {
        stage('Set Up') {
            steps {
                script {
                    sh 'rm -rf jenkins.docker.spring.react.selenium_person-database'
                }
            }
        }
        stage('SCM Checkout') {
            steps {
                sh 'git clone --branch feat/dev https://github.com/kg0529/jenkins.docker.spring.react.selenium_person-database.git '
            }
        }
        stage('Compile-Package-Test') {
            steps {
                script {
                    dir('$PWD/jenkins.docker.spring.react.selenium_person-database/webservice') {
                        sh "mvn spring-boot:run"
                    }
                }
            }
        }
    }
}